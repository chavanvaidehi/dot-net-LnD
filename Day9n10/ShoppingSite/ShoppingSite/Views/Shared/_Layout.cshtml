<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ShoppingSite</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-gray-100" style="padding-top: 75px;">

    <!-- ✅ Fixed, Visible Navbar -->
    <nav class="navbar bg-indigo-600 fixed-top px-4 shadow z-50">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand fw-bold text-white" href="/Home/Dashboard">🛒 ShopNow</a>

            <div class="d-flex gap-4">
                <a class="nav-link text-white" href="/Home/Dashboard">Home</a>
                <a class="nav-link text-white" href="/Home/About">About Us</a>
                <a class="nav-link text-white" href="/Home/Contact">Contact Us</a>
                <a class="nav-link text-white" asp-controller="Product" asp-action="Cart">Cart</a>


                @if (Context.Session.GetString("UserName") != null)
                {
                    <a class="nav-link text-white" href="/Account/Logout">Logout</a>
                }
                else
                {
                    <a class="nav-link text-white" href="/Account/Login">Login</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
