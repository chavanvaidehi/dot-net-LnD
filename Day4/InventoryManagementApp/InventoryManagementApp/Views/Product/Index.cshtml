@model IEnumerable<InventoryManagementApp.Models.Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <h2 class="text-3xl font-bold text-indigo-600 mb-4">Product Inventory</h2>

    <a class="btn btn-success mb-3" asp-action="Create">+ Add New Product</a>

    <table class="table table-bordered table-striped shadow rounded">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>₹@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
