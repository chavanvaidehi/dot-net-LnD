@model RefactoredLoginApp.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 flex justify-center">
    <div class="card p-4 shadow-lg w-full md:w-1/3">
        <h2 class="text-center text-2xl font-bold mb-4 text-indigo-600">Login</h2>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="admin" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="1234" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-full">Login</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger mt-2">Invalid username or password.</div>
            }
        </form>

        <div class="text-muted text-sm mt-3">
            <strong>Hint:</strong> Username: <code>admin</code>, Password: <code>1234</code>
        </div>
    </div>
</div>
